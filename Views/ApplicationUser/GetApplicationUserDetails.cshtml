
@{
	ViewData["Title"] = "Get User Details";
}


@if (Model != null)
{
    <div class="container my-4">
        <div class="card shadow rounded mx-auto" style="max-width: 500px;">
            <div class="card-header bg-info text-white text-center">
                <h4 class="mb-0">User Details</h4>
            </div>

            <div class="card-body">
                <p class="fw-bold">
                    <i class="fas fa-user me-2"></i> User Name: <span class="text-primary">@Model.UserName</span>
                </p>

                <p class="fw-bold">
                    <i class="fas fa-envelope me-2"></i> Email: <span class="text-primary">@Model.Email</span>
                </p>

                <a asp-action="GetApplicationUserList" asp-controller="ApplicationUser" class="btn btn-secondary mt-3 d-block mx-auto">
                    <i class="fas fa-arrow-left"></i> Back to User List
                </a>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning text-center mt-4">
        <i class="fas fa-exclamation-circle"></i> User details not available!
    </div>
}






