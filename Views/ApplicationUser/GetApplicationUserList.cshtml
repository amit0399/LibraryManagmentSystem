
@{
	ViewData["Title"] = "Get User List";
}



@{
    var serial = 1;
}

<div class="table-responsive shadow rounded">
    <table class="table table-hover align-middle">
        <thead class="table-success text-center">
            <tr>
                <th>#</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@serial</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>
                        <a asp-action="GetApplicationUserDetails" asp-controller="ApplicationUser" asp-route-userId="@item.UserId" class="btn btn-info btn-sm me-1">
                            <i class="fas fa-eye"></i> View
                        </a>

                        <a asp-action="DeleteApplicationUser" asp-controller="ApplicationUser" asp-route-userId="@item.UserId" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>

                serial++;
            }
        </tbody>
    </table>
</div>








