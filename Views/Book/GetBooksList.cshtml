
@{
	ViewData["Title"] = "Books List Page";
}
@{
	var serial = 1;
}


<p>
    <a asp-controller="Book" asp-action="CreateBook" class="btn btn-success mb-3">
        <i class="fas fa-plus"></i> Add New Book
    </a>
</p>

<div class="table-responsive shadow rounded">
    <table class="table table-hover align-middle">
        <thead class="table-primary text-center">
            <tr>
                <th scope="col">Sr no.</th>
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col">Category</th>
                <th scope="col">Quantity</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@serial</td>
                    <td>@item.Title</td>
                    <td>@item.Author</td>
                    <td>@item.Category</td>
                    <td>@item.Quantity</td>
                    <td>
                        <a asp-action="GetBook" asp-controller="Book" asp-route-id="@item.BookId" class="btn btn-info btn-sm me-1">
                            <i class="fas fa-eye"></i> View
                        </a>
                        <a asp-action="UpdateBook" asp-controller="Book" asp-route-id="@item.BookId" class="btn btn-warning btn-sm me-1">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="DeleteBook" asp-controller="Book" asp-route-id="@item.BookId" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
                serial++;
            }
        </tbody>
    </table>
</div>





