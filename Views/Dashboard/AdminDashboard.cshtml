
@{
	ViewData["Title"] = "Dashboard Page";
}


<div class="container my-5">
    <h2 class="mb-4 text-center">Admin Dashboard</h2>
    <div class="row g-4">

        <!-- Total Books Card -->
        <div class="col-md-3">
            <div class="card shadow text-white bg-primary h-100">
                <div class="card-body text-center">
                    <i class="fas fa-book fa-3x mb-3"></i>
                    <h5 class="card-title">Total Books</h5>
                    <h2>@Model.TotalBooks</h2>
                    <p class="card-text">All books in the library.</p>
                </div>
            </div>
        </div>

        <!-- Available Books Card -->
        <div class="col-md-3">
            <div class="card shadow text-white bg-success h-100">
                <div class="card-body text-center">
                    <i class="fas fa-book-open fa-3x mb-3"></i>
                    <h5 class="card-title">Available Books</h5>
                    <h2>@Model.TotalAvailableBook</h2>
                    <p class="card-text">Books currently available for issue.</p>
                </div>
            </div>
        </div>

        <!-- Issued Books Card -->
        <div class="col-md-3">
            <div class="card shadow text-white bg-warning h-100">
                <div class="card-body text-center">
                    <i class="fas fa-book-reader fa-3x mb-3"></i>
                    <h5 class="card-title">Issued Books</h5>
                    <h2>@Model.TotalIssuedBook</h2>
                    <p class="card-text">Books currently issued to users.</p>
                </div>
            </div>
        </div>

        <!-- Total Users Card -->
        <div class="col-md-3">
            <div class="card shadow text-white bg-info h-100">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x mb-3"></i>
                    <h5 class="card-title">Total Users</h5>
                    <h2>@Model.TotalMembers</h2>
                    <p class="card-text">Registered library users.</p>
                </div>
            </div>
        </div>

    </div>
</div>



