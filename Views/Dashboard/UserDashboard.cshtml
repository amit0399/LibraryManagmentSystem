
@{
    ViewData["Title"] = "User Dashboard Page";
}

@if (Model != null)
{
    <div class="container my-4">
        <h3 class="text-center mb-4 text-primary">📜 Issued Book History</h3>

        <div class="table-responsive shadow rounded">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Issue Date</th>
                        <th scope="col">Expected Return Date</th>
                        <th scope="col">Actual Return Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Title</strong></td>
                            <td>@item.IssueDate.ToString("dd MMM yyyy")</td>
                            <td>@item.ExpectedReturnDate.ToString("dd MMM yyyy")</td>
                            <td>
                                @if (item.ActualReturnDate != null)
                                {
                                    <span class="badge bg-success">@item.ActualReturnDate?.ToString("dd MMM yyyy")</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-info text-center mt-4">
        <i class="fas fa-info-circle"></i> No issued books found in your history.
    </div>
}




