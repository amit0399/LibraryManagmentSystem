
@{
	ViewData["title"] = "Get Issue Book Details";

}

@if (Model != null)
{
    <div class="container my-5">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white text-center">
                <h3>Issue Book Details</h3>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">User Name:</div>
                    <div class="col-md-8">@Model.UserName</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">Book Name:</div>
                    <div class="col-md-8">@Model.Title</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">Issue Date:</div>
                    <div class="col-md-8">@Model.IssueDate.ToString("dd MMM yyyy")</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">Expected Return Date:</div>
                    <div class="col-md-8">@Model.ExpectedReturnDate.ToString("dd MMM yyyy")</div>
                </div>
            </div>
            <div class="card-footer text-center">
                <a asp-action="UserDashboard" asp-controller="Dashboard" class="btn btn-outline-primary">Back to Dashboard</a>
            </div>
        </div>
    </div>
}






