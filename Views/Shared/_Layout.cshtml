@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibraryManagementSystemMVC_Project</title>

    <link href="~/css/custom-stylesheet.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/LibraryManagementSystemMVC_Project.styles.css" asp-append-version="true" />
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">

</head>
<body class="d-flex flex-column min-vh-100">

     @* checking the role using session *@
    @{
        var role = HttpContextAccessor.HttpContext.Session.GetString("Role");
        var userName = HttpContextAccessor.HttpContext.Session.GetString("UserName");
    }
    @if (!string.IsNullOrEmpty(role))
    {
        <header>

            <div class="container-fluid mt-3">
                <nav class="navbar navbar-expand-lg modern-navbar">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="@Url.Action("Index", "Home")">LMS</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        @if (role == "Admin")
                        {

                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="navbar-nav ms-auto me-5 mb-3 mb-lg-0">

                                    <li class="nav-item mx-2">
                                        <a class="nav-link active" aria-current="page" href="@Url.Action("AdminDashboard","Dashboard")">Dashboard</a>
                                    </li>
                                    <li class="nav-item mx-2">
                                        <a class="nav-link" href="@Url.Action("GetBooksList","Book")">Booklist</a>
                                    </li>

                                    <li class="nav-item mx-2">
                                        <a class="nav-link" href="@Url.Action("GetApplicationUserList","ApplicationUser")">Userlist</a>
                                    </li>
                                    <li class="nav-item mx-2">
                                        <a class="nav-link" href="@Url.Action("GetIssueBookList","Issue")">IssuedList</a>
                                    </li>
                                    <li class="nav-item mx-2">
                                        <a class="nav-link" href="@Url.Action("CreateIssueBook", "Issue")">IssuedBook</a>
                                    </li>
                                    <li class="nav-item mx-2">
                                        <a class="nav-link" href="@Url.Action("GetBookInventoryStatus","Dashboard")">BookInventory</a>
                                    </li>
                                </ul>

                                <form class="d-flex align-items-center" role="search">
                                    <div class="input-group search-group">
                                        <span class="input-group-text bg-white border-end-0"><i class="fas fa-search"></i></span>
                                        <input class="form-control border-start-0 search-input" type="search" placeholder="Search"
                                        aria-label="Search" />
                                    </div>
                                </form>

                            </div>

                        }
                        else if(role == "User")
                        {
                            

                           
                        }
                        <ul class="navbar-nav ms-auto me-5 mb-3 mb-lg-0">
                            <li class="nav-item">
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <button type="submit" class="btn btn-outline-danger ms-2">Logout</button>
                                </form>
                            </li>
                        </ul>

                    </div>
                </nav>
            </div>


        </header>
    }
    <div class="container h-100 mt-4">
        <main role="main" class="pb-3 flex-fill">
            @RenderBody()
        </main>
    </div>

    <footer >
        
        <div class="footer-text text-center mb-2 mt-2 border">
            © 2025 YourCompany. All rights reserved.
        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
